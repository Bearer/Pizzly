<% 
const errStatus = typeof status === "number" ? status : 404;
const errors = { 400: { title: "400 (Bad Request)", description: 'The request could not be performed' }, 401: {
title: "4O1 (Unauthorized)", description: "Access denied. You are lacking permissions to request that resource." }, 404:
{ title: "404 (Not Found)", description: "The requested entity was not found." } };
const errorTitle = errors[errStatus].title;
const errorDescription = errors[errStatus].description;
 %>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= errorTitle %></title>
    <link rel="shorcut icon" sizes="128x128" type="image/x-icon" href="/assets/img/logos/favicon.ico" />
    <link rel="stylesheet" href="/assets/css/hero.css" />
  </head>
  <body>
    <main class="container hero">
      <section class="error">
        <img style="opacity:0.8" src="/assets/img/logos/pizzly.png" height="200" />
        <h1><%= errorTitle %></h1>
        <p><%= errorDescription %></p>
      </section>
    </main>
  </body>
</html>
