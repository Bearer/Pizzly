    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "yarn build && NODE_ENV=production node .webpack/src/server.js -p $PORT",
    "dev": "nodemon ./src/server.ts",
    "generate:views": "webpack --config webpack.views.config.js",
    "build": "yarn generate:views && webpack --config webpack.config.js"
  },
  "author": "engineering@bearer.sh",
  "license": "ISC",
  "dependencies": {
