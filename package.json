    "@types/passport-oauth2": "^1.4.5",
    "@types/pug": "^2.0.4",
    "@types/simple-oauth2": "^2.2.1",
    "@types/supertest": "^2.0.5",
    "@types/uuid": "^3.4.3",
    "@types/wreck": "^14.0.0",
    "babel-loader": "^8.0.5",
    "commitlint": "^7.2.1",
    "copy-webpack-plugin": "^5.0.2",
