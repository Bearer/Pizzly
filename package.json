    "supertest": "^3.3.0",
    "timekeeper": "^2.2.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node-dev": "^1.0.0-pre.42",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/**/*.{spec,test}.{ts,tsx}"
    ],
    "projects": [
      {
        "displayName": "browser",
        "testURL": "http://localhost/",
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(.*/views/.*)((test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
          "ts",
          "tsx",
          "js",
          "jsx",
          "json",
          "node"
        ],
        "modulePathIgnorePatterns": [
          "<rootDir>/dist/"
        ],
        "setupFiles": [
          "jest-localstorage-mock"
        ],
        "verbose": true
      },
      {
        "displayName": "backend",
        "setupFiles": [
          "<rootDir>/jestSetup.js"
        ],
        "testEnvironment": "node",
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "modulePathIgnorePatterns": [
          "<rootDir>/dist/"
        ],
        "testPathIgnorePatterns": [
          "/node_modules/",
          "/views/"
        ],
        "moduleFileExtensions": [
          "ts",
          "tsx",
          "js",
          "jsx",
          "json",
          "node"
        ],
        "verbose": true
      }
    ]
  },
  "lint-staged": {
    "*.{css,md,tsx,ts}": [
      "prettier --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
