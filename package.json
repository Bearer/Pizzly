  "devDependencies": {
    "@bearer/tslint-config": "^0.83.5",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@oclif/tslint": "^3.1.1",
    "@types/cls-hooked": "^4.3.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/crypto-js": "^3.1.43",
    "@types/debug": "^0.0.31",
