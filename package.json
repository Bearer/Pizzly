    "cls-hooked": "^4.2.2",
    "compose-middleware": "^5.0.1",
    "connect-session-knex": "^3.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "lodash.at": "^4.6.0",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "merge": "^2.1.1",
    "oauth": "^0.10.0",
    "passport": "^0.6.0",
    "passport-oauth1": "^1.2.0",
    "pg": "^8.8.0",
    
    "simple-oauth2": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express-session": "^1.17.5",
    "typescript": "^4.7.4",
    "rimraf": "^3.0.2",
    "jest": "^29.3.1"
  },
