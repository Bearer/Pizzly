{
    "type": "object",
    "patternProperties": {
        "^[a-z0-9-]+$": {
            "type": "object",
            "properties": {
                "auth_mode": {
                    "type": "string",
                    "enum": ["API_KEY", "APP", "APP_STORE", "BASIC", "NONE", "OAUTH1", "OAUTH2", "OAUTH2_CC", "CUSTOM", "TBA", "TABLEAU"]
                },
                "authorization_url": { "type": "string" },
                "token_url": {
                    "oneOf": [
                        { "type": "string" },
                        {
                            "type": "object",
                            "properties": {
                                "API_KEY": { "type": "string" },
                                "APP": { "type": "string" },
                                "APP_STORE": { "type": "string" },
                                "BASIC": { "type": "string" },
                                "NONE": { "type": "string" },
                                "OAUTH1": { "type": "string" },
                                "OAUTH2": { "type": "string" },
                                "CUSTOM": { "type": "string" }
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                "authorization_params": { "type": "object" },
                "token_params": { "type": "object" },
                "refresh_params": { "type": "object" },
                "scope_separator": { "type": "string" },
                "docs": { "type": "string" },
                "body_format": { "type": "string" },
                "proxy": {
                    "type": "object",
                    "properties": {
                        "base_url": { "type": "string" },
                        "paginate": { "type": "object" },
                        "headers": {
                            "type": "object",
                            "patternProperties": {
                                "^[a-zA-Z0-9-]+$": { "type": "string" }
                            }
                        },
                        "query": {
                            "type": "object",
                            "properties": {
                                "api_key": { "type": "string" }
                            }
                        }
                    }
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}
